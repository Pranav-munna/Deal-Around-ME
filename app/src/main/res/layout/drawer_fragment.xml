<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/header"
            android:drawableLeft="@drawable/back_arrow_left"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/user_visiablity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/user_settings_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/button_on_blue"
                android:drawableRight="@drawable/arrow_down"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="My settings"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/user_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_on_blue_dark"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="My profile"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="My filter"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="settings notification"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/black" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Categories"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/business_visiablity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/business_settings_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/button_on_blue"
                android:drawableRight="@drawable/arrow_down"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="My settings"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/business_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_on_blue_dark"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Add an account"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="My profile"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="settings notification"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

            <Button
                android:id="@+id/manage_deal_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/button_on_blue"
                android:drawableRight="@drawable/arrow_down"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Manage deal"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/business_manage_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_on_blue_dark"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Current Deal"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Upcoming deal"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="History"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

            <Button
                android:id="@+id/create_deal_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/button_on_blue"
                android:drawableRight="@drawable/arrow_down"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Create deal"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/business_create_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_on_blue_dark"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Deal"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Flash deal"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/black" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Analytics"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Add credit"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorPrimary" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Legal information"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorPrimary" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Privacy policy"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorPrimary" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Contact"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/switch_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="SWITCH USER"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorPrimary" />


    </LinearLayout>


</ScrollView>